{
    "global": {
        "check_for_updates_on_startup": false,
        "show_in_menu_bar": false
    },
    "profiles": [
        {
            "rules": [
                {
                    "manipulators": [
                        {
                            "description": "Change caps_lock to command+control+option+shift.",
                            "from": {
                                "key_code": "caps_lock",
                                "modifiers": { "optional": ["any"] }
                            },
                            "to": [
                                {
                                    "key_code": "left_shift",
                                    "modifiers": ["left_command", "left_control", "left_option"]
                                }
                            ],
                            "type": "basic"
                        }
                    ]
                }
            ]
        }
    ]
}
