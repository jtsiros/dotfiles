{
  "diagnostic.displayByAle": true,
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "staticcheck": true,
        "usePlaceholders": true,
        "completeUnimported": true,
        "caseSensitiveCompletion": true
      }
    }
  }
}
